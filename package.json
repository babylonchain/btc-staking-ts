{
  "name": "btc-staking-ts",
  "version": "0.0.1",
  "description": "Library exposing methods for the creation and consumption of Bitcoin transactions pertaining to Babylon's Bitcoin Staking protocol.",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "generate-types": "dts-bundle-generator -o ./dist/index.d.ts ./src/index.ts",
    "build": "node build.js && npm run generate-types",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run format && npm run lint",
    "preversion": "npm run format && npm run lint"
  },
  "files": [
    "dist/*"
  ],
  "keywords": [
      "bitcoin",
      "staking",
      "babylon",
      "btc-staking"
  ],
  "author": "Babylonchain Inc.",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "dts-bundle-generator": "^9.3.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.4.0"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "bitcoinjs-lib": "^6.1.5"
  }
}
